<?xml version="1.0"?>
<launch>

  <node
    pkg="aruco_marker_localization"
    type="image_from_webcam_node.py"
    name="image_publisher"
    required="true"
  />

  <rosparam
    command="load"
    file="$(find aruco_marker_localization)/config/marker_settings.yaml"
  />

  <rosparam
    command="load"
    file="$(find aruco_marker_localization)/config/camera_parameters_webcam.yaml"
  />

  <node
    pkg="aruco_marker_localization"
    type="pose_estimation_node.py"
    name="pose_publisher"
    output="screen"
  />

</launch>
